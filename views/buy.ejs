<html>
   <title>Stock trading</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" src="action.css">
<head>
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand">Portfolio Manager</a>
    </div>
    <ul class="nav navbar-nav">
      <li id="profile"><a href="<%= link1 %>">Dashboard</a></li>
      <li id="buy" ><a href="<%= link2 %>">Buy</a></li>
      <li id="sell" ><a href="<%= link3 %>">Sell</a></li>
      <li id="quote" ><a href="<%= link4 %>">Quote</a></li>
      <li id="history" ><a href="<%= link5 %>">History</a></li>
      <li id="logout"><a href = "/logout">Logout</a></li>
    </ul>
  </div>
</nav>
</head>

<body>
    <center>
        <h1> <%= username %> start buying stocks !!!</h1>
        <% if (statusMessage !=="") {%>
          <h1> <%= statusMessage %></h1>
        <%}%>
        <form action="/buy/<%= userID %>" method="POST">
          <div class = "form-group">
            <label>Name: </label>
            <select name = "chosenStockID">
                <% for(var i = 0; i < stocks.length; i++) { %>
                    <option value="<%= stocks[i].stockID %>"> <%= stocks[i].stockName %> </option>
                <% } %>
                <input autocomplete="off" autofocus class="form-control" name="sharesBought" placeholder="# of Shares" type="number" min="1"/>
                <button class="btn btn-default" type="submit">Buy</button>
          </div>
      </form>
    </center>
</body>

</html>
