          <div class = "form-group">
            <label>Name: </label>
            <select name = "chosenStockName">
                <% for(var i = 0; i < data.length; i++) { %>
                    <option value="<%= data[i].stockName %>"> <%= data[i].stockName %> </option>
                <% } %>
