<html>
  <title>Stock trading</title>
  <link rel="stylesheet" href="/css/action.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<head>
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand">Portfolio Manager</a>
    </div>
    <ul class="nav navbar-nav">
      <li id="profile"><a href="<%= link1 %>">Dashboard</a></li>
      <li id="buy" ><a href="<%= link2 %>">Buy</a></li>
      <li id="sell" ><a href="<%= link3 %>">Sell</a></li>
      <li id="quote" ><a href="<%= link4 %>">Quote</a></li>
      <li id="history" ><a href="<%= link5 %>">History</a></li>
      <li id="logout"><a href = "/logout">Logout</a></li>
    </ul>
  </div>
</nav>
</head>

<body>
    <center>
      <% if (inc!="") {%>
        <h1>Price of <%= inc %> share is <%= price %></h1>
      <%}%>
    <form action="<%= link4 %>" method="post">
      <div class="form-group">
        <label>Search for Stock Name: </label>
            <select name = "chosenStockName">
                <% for(var i = 0; i < shares.length; i++) { %>
                    <option value="<%= shares[i].stockID %>"> <%= shares[i].stockName %> </option>
                <% } %>
          <input autocomplete="off" autofocus class="form-control" name="stockname" placeholder="Stock-Name" type="text"/>
      </div>
      <button class="btn btn-primary" type="submit">Quote</button>
    </form>
  </center>
</body>

</html>
